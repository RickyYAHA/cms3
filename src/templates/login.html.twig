{% include 'header.html.twig' %}
<div id="regContainer">
    <h1 id="title">{{ pageTitle|default("Brak tytułu podstrony")}}</h1>
    <form action="" method="post">
        <input type="email" name="email" id="emailInput" placeholder="wpisz email"><br>
        <input type="password" name="password" id="passwordInput" placeholder="wpisz hasło"><br>
        <input type="submit" name="submit" value="Zaloguj" id="submit">
    </form>
        {% if message is defined %}
    <span class="message">{{ message }}</span>
    {% endif %}
</div>
